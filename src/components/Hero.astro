---
// Hero.astro
const { title, subtitle, buttonText, imageSrc } = Astro.props;
---

<section 
  class="relative flex items-center h-screen px-8 md:px-20 bg-gray-50"
  style={`background-image: url(${imageSrc}); background-size: cover; background-position: center;`}
>
  {/* Overlay opcional para mejorar legibilidad */}
  <div class="absolute inset-0 bg-black/70"></div>

  {/* Contenido */}
  <div class="relative z-10 max-w-2xl flex flex-col gap-8">
    <h1 class="text-4xl md:text-6xl font-bold text-gray-300">
      Creamos <span class="bg-clip-text text-transparent bg-gradient-to-r from-purple-500 to-indigo-500">experiencias</span> digitales que impactan.
    </h1>
    <p class="text-white text-lg md:text-xl">{subtitle}</p>
<a
  href="#contact"
  class="mt-4 bg-gradient-to-r from-purple-500 to-indigo-500 text-white font-semibold rounded-full shadow-lg hover:scale-105 transform transition text-center
         py-2 text-sm md:text-lg w-1/2 max-w-xs"
>
  {buttonText}
</a>


  </div>
</section>
