---
const menu = [
  { label: "Proyectos", href: "#projects" },
  { label: "Contacto", href: "#contact" },
];
---

<nav class="top-0 z-50 bg-gray-50 shadow-lg backdrop-blur-sm">
  <div class="flex justify-around items-center px-6 md:px-12 py-4">

    <!-- Logo -->
    <div class="text-xl font-bold">PDX El Salvador</div>

    <!-- Botón hamburguesa (mobile + tablet) -->
    <button
      id="menu-btn"
      class="lg:hidden flex flex-col gap-1"
      aria-label="Toggle menu"
    >
      <span class="w-6 h-0.5 bg-black transition-all"></span>
      <span class="w-6 h-0.5 bg-black transition-all"></span>
      <span class="w-6 h-0.5 bg-black transition-all"></span>
    </button>

    <!-- Menú desktop (solo lg+) -->
    <ul class="hidden lg:flex gap-6 items-center">
      {menu.map(item => (
        <li>
          <a
            href={item.href}
            class="text-gray-900 hover:text-black transition font-semibold"
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </div>

  <!-- Menú mobile animado (mobile + tablet) -->
  <div
    id="mobile-menu"
    class="
      lg:hidden
      overflow-hidden
      max-h-0
      opacity-0
      -translate-y-3
      transition-all
      duration-500
      ease-in-out
      px-6
      bg-white
    "
  >
    <div class="flex flex-col gap-4 py-6">
      {menu.map(item => (
        <a
          href={item.href}
          class="text-gray-700 hover:text-black transition"
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  const btn = document.getElementById("menu-btn");
  const menu = document.getElementById("mobile-menu");

  btn?.addEventListener("click", () => {
    const isOpen = menu.classList.contains("open");

    if (isOpen) {
      menu.classList.remove(
        "max-h-[500px]",
        "opacity-100",
        "translate-y-0",
        "open"
      );
    } else {
      menu.classList.add(
        "max-h-[500px]",
        "opacity-100",
        "translate-y-0",
        "open"
      );
    }
  });
</script>
